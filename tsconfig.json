{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "declaration": true,
    "target": "ES2020",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
